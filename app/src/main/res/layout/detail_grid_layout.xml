<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/divider"
    app:columnCount="2">

    <TextView
        android:id="@+id/LatLng_heading"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/location"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/latlng"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_gravity="fill"
        tools:text="38%" />

    <TextView
        android:id="@+id/distance_heading"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/distance_heading"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/distance"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_gravity="fill"
        tools:text="38%" />

    <TextView
        android:id="@+id/count_heading"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/count_heading"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/people_count"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_gravity="fill"
        tools:text="38%" />

    <TextView
        android:id="@+id/detail_url"
        android:gravity="center_vertical"
        android:autoLink="all"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_gravity="fill"
        tools:text="38%" />
</android.support.v7.widget.GridLayout>