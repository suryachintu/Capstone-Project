<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:columnCount="2"
    android:rowCount="4"
    android:orientation="horizontal"
    android:padding="@dimen/grid_padding"
    android:background="@color/detail_grid_color">

    <TextView
        android:id="@+id/LatLng_heading"
        android:fontFamily="sans-serif"
        android:text="@string/location"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_row="0"
        android:layout_column="0"
        android:textColor="@android:color/white"
        android:padding="@dimen/magnitude_margin"/>

    <TextView
        android:id="@+id/latlng"
        android:layout_row="0"
        android:layout_column="1"
        android:textColor="@android:color/white"
        android:padding="@dimen/magnitude_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_columnSpan="1"/>

    <TextView
        android:id="@+id/distance_heading"
        android:fontFamily="sans-serif"
        android:text="@string/distance_heading"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_column="0"
        android:padding="@dimen/magnitude_margin"
        android:layout_row="1" />

    <TextView
        android:id="@+id/distance"
        android:layout_column="1"
        android:layout_row="1"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="@dimen/magnitude_margin"/>

    <TextView
        android:id="@+id/count_heading"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:text="@string/count_heading"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_column="0"
        android:layout_row="2"
        android:padding="@dimen/magnitude_margin"/>

    <TextView
        android:id="@+id/people_count"
        android:layout_column="1"
        android:layout_row="2"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="@dimen/magnitude_margin"/>

    <Button
        android:id="@+id/detail_url"
        android:text="@string/more_link"
        android:layout_row="3"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_column="0"
        android:padding="@dimen/magnitude_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</GridLayout>