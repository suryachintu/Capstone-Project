<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <include
        android:id="@+id/frame_layout"
        layout="@layout/mag_layout"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/frame_layout"
        android:layout_toEndOf="@+id/frame_layout"
        android:layout_marginStart="@dimen/title_margin"
        android:layout_marginLeft="@dimen/title_margin"
        android:textSize="@dimen/time_textsize"
        tools:text="India,New Delhi"
        android:layout_marginTop="@dimen/magnitude_margin"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/time_margin"
        android:layout_marginEnd="@dimen/time_margin"
        android:layout_marginBottom="@dimen/time_margin_bottom"
        tools:text="2 hrs ago"
        android:textSize="@dimen/time_textsize"/>


</RelativeLayout>